<div class="col-md-10 col-md-offset-1">

<h1>Vorfreude index</h1>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Time</th>
      <th>Image</th>
      <th>Link</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cds.each do |cd| %>
      <tr>
        <td><%= cd.title %></td>
        <td><%= cd.time %></td>
        <td><%= link_to image_tag(cd.image_url, :height => 30), cd.image_url %></td>
        <td><%= cd.link %></td>
        <td><%= link_to 'Show', cd %></td>
        <td><%= link_to 'Edit', edit_cd_path(cd) %></td>
        <td><%= button_to 'Destroy', cd, :method => :delete, :class => 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Countdown', new_cd_path, :class => 'btn btn-success btn-lg' %>

</div>
